<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="paperformat_payment_ticket" model="report.paperformat">
		<field name="name">Payment Ticket</field>
		<field name="default" eval="True"/>
		<field name="format">custom</field>
		<field name="page_height">297</field>
		<field name="page_width">90</field>
		<field name="orientation">Portrait</field>
		<field name="margin_top">3</field>
		<field name="margin_bottom">3</field>
		<field name="margin_left">3</field>
		<field name="margin_right">3</field>
		<field name="header_line" eval="False" />
		<field name="header_spacing">3</field>
		<field name="dpi">130</field>
	</record>

	<report
			id="action_pos_slip_id"
			model="pos.order"
			string="POS Slip"
			report_type="qweb-pdf"
			name="de_pos_slip_pos_order.pos_slip_report_template"
			file="de_pos_slip_pos_order.pos_slip_report_template"
			paperformat="de_pos_slip_pos_order.paperformat_payment_ticket"
	/>
</odoo>

