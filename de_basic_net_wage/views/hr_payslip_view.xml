<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Addd Basic wage and Net wage in list view-->
        <record id="inherit_view_hr_payslip_tree" model="ir.ui.view">
            <field name="name">inherit.view.hr.payslip.tree</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="basic_wage_amount"/>
                    <field name="net_amount"/>
                </xpath>
                <xpath expr="//field[@name='basic_wage']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='net_wage']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>